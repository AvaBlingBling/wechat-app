/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /* padding: 200rpx 0; */
  box-sizing: border-box;
} 
view,image{
  width: 100%;
  box-sizing:border-box;
}
.red{
  color: red;
}
.bgRed{
  background: red;
  color: #fff;
}
.col-9{
  width: calc(9 / 12 * 100%);
  display: inline-block;
}
.col-3{
  width: calc(3 / 12 * 100%);
  display: inline-block;
}
.mask{
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.65);
  z-index: 99;
}
.noscroll{
  height: 100vh;
  overflow-y: hidden;
}
.hidden{
  display: none;
}
.right{
  float: right;
}
.bottom-border{
  border-bottom: 1px solid #9e9e9e;
}
.border-top-bottom{
  border-bottom: 1px solid #9e9e9e;
  border-top: 1px solid #9e9e9e;
}
.font12{
  font-size: 12px;
}
.font14{
  font-size: 14px;
}
.font16{
  font-size: 16px;
}
.s-img{
  width: 150rpx;
}
/*固定在下方  */
.controls {
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center; 
  border-top: 1px solid #9e9e9e;
  z-index:100;
}
/*tab也签的选中项  */
.active{
  color: red;
  border-bottom: 2px solid red!important; 
}