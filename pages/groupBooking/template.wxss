/* 购买详情 */
.buy_details{
	position:fixed;
	bottom:0;
	left:0;
	background:#fff;
	z-index:100;
	font-size:14px;	
}

/* 购买的商品信息 */
.product_details{
	padding:0 40rpx;
}

.buy_details .clear{
	right:30rpx;
}

/* 左边图片 */
.product_img{
	padding-bottom:20rpx;
	border-bottom:1px solid #9e9e9e;
}

/* 左边宽度 */
.buy_details .left{
	width:35%;
}

.buy_details .left image{
	width:100%;
	height:30rpx;
	margin-top:-80rpx;
	border-radius:6px;
}

/* 右边价格 */
.buy_details .right{
	width:65%;
	padding-left:10rpx;
	padding-top:40rpx;
  text-align: left;
}

.buy_details .right .text_red{
	margin-top:20rpx;
}

/* 购买数量 */
.specification{
	padding:20rpx 0;
	border-bottom:1px solid #9E9E9E;
}

/* 红色背景 */
.bgcolor{
	padding:4rpx 0;
	background:#E51C23;
	border-radius:4px;
	color:#fff;
	width:30%;
	text-align: center;
}

/* 购买数量 */
.buy_num{
	padding:20rpx 0 30rpx 0;
}

.buy_num .right{
	padding:20rpx 10rpx 0 0;
	text-align: right;
}

/* 数量加减 */
.case{
	width:70rpx;
	height:50rpx;
	display: inline-block;
	line-height: 50rpx;
	text-align: center;
	border:1px solid #9E9E9E;
  margin:0;
  padding:0;
  vertical-align: middle;
  border-radius:0;
}

button.case{
  height:54rpx;
  line-height: 50rpx;
}

/* 确定 */
.confirm{
	margin-top:40rpx;
	height:50px;
	line-height: 50px;
	background: #E51C23;
	color:#fff;
	text-align: center;
}

/* 遮罩层 */
.shade{
	position:absolute;
	top:0;
	left:0;
	background:rgba(68,68,68,.4);
	height:100%;
}

.left,.right{
	display: inline-block;
	width:45%;
	font-size:12px;
}

/* 现价颜色 */
.text_red{
	color:#E51C23;
}