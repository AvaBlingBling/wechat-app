/* pages/product/confirm.wxss */
.add-address{
  padding: 20rpx 30rpx;
}
.add-address .add-circle{
  width:35rpx;
  height:35rpx;
  display:inline-block;
  color:#fff;
  background:#1890ff;
  border-radius:50%;
  line-height:26rpx;
  text-align:center;
  font-size:20px;
  margin-right: 10rpx;
}
.order{
  background: #e8e8e8;
  display:flex;
  align-items: center;
  margin-top: 20rpx;
}
.order .title{
  vertical-align: top;
  padding-left: 20rpx;
}
.font16,font14,.font12{
  line-height: 40rpx;
}
.order-item{
  padding: 20rpx;
}
.order-item .font12{
  /* color:#ccc; */
  margin-right: 10rpx;
}
.message text{
  width: 20%; 
  line-height: 52rpx;
}
.message input{
  width: 80%;
}
.controls {
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: flex-start;
  align-items: center; 
  background-color: #fafafa;
  border-top: 1px solid #9e9e9e;
}
.controls div{
  box-sizing: border-box;
  height: 90rpx;   
  line-height: 90rpx;  
  text-align: center;
  font-size: 0.8rem;
}
.controls .summary {
  width: 60%;
}
.controls .checkpay {
  width: 40%;
}
