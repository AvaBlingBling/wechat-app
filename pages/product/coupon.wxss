/* pages/product/coupon.wxss */
.tab .tab_top ul li{
  width:30%; 
  display:inline-block;
  box-sizing: border-box;
  text-align:center;
  font-size:0.8rem;
  border-bottom: 1px solid transparent; 
  transition:0.5s all;
  padding:5px;
  margin:0 1%;
}
.tab .tab_content{
  padding: 0 30rpx;
}
.tab_content .coupon-select{
  background: #f5f5f5;
}
.tab_content .text-desc{
  margin: 10rpx 0;
  color:#ff4d4f;
}
.tab_content .coupon{
  border: 1px solid red;
  padding: 0 10rpx;
  margin: 30rpx 0;
}
.coupon .coupon-content{
  display: flex;
  align-items: center;
  padding: 30rpx;
  color: rgba(0, 0, 0, 0.65);
  border-bottom: 1px dashed #9e9e9e;
}
.coupon .validity{
  text-align: right;
  color: #9e9e9e;
  padding-right: 10rpx;
}